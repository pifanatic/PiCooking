<section>
    <h2><span class="fas fa-tag h2-icon"></span>Titel</h2>
    <input
        id="title"
        name="title"
        value="[% recipe.title %]"
        placeholder="Trage hier den Titel des Rezeptes ein"
        required/>
</section>

<section>
    <h2><span class="far fa-list-alt h2-icon"></span>Zutaten</h2>
    <textarea
        id="ingredients-input"
        name="ingredients"
        rows="10"
        placeholder="Trage hier die Zutaten ein..."
        required
    >[% recipe.ingredients %]</textarea>
</section>

<section>
    <h2><span class="fas fa-hammer h2-icon"></span>Zubereitung</h2>
    <textarea
        id="instructions-input"
        name="instructions"
        rows="10"
        placeholder="Trage hier ein, wie das Rezept zubereitet wird..."
        required
    >[% recipe.instructions %]</textarea>
</section>


<section>
    <h2><span class="far fa-clone h2-icon"></span>Kategorien</h2>
    <textarea
        id="categories"
        name="categories"
        placeholder="Trage hier die Kategorien des Rezeptes ein..."
        rows="5"
    >[% categories %]</textarea>
</section>
